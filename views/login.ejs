<% include partials/header.ejs %>

<div class="container text-center">
    <div class="row">
        <h1 class="text-center mx-auto pb-3">Login</h1>
    </div>
    <div class="row text-center mx-2">
        <div class="col-xs-10 col-md-8 col-lg-6 text-center mx-auto jumbotron bg-dark pb-3">
            <form action="/login" method="POST">
                <div class="form-group ">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Login</button>
                </div>
            </form>
            <div class="text-center pb-2">
                <a href="/forgot">Forgot OR want to change your password?</a>
            </div>
            <a href="/campgrounds" class="text-light">Go Back</a>
        </div>
    </div>
</div>

