<% include ../partials/header.ejs %>

<div class="container p-3">
    <div class="row justify-content-center">
        <div class="col-xs-10 col-md-8 col-lg-6 text-center">
            <h1>Create a New Campground</h1>
                <div>
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="name">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="image url">
                        </div>
                        <p>** Note ** Please use url address for images from <a href="https://pixabay.com/images/search/" target="_blank">Pixabay</a>. Then search camp or
                            camping. Finally, right click the chosen image and select "copy link address".</p>
                        <div class="form-group">
                            <input class="form-control" type="text" name="description" placeholder="description">
                        </div>
                        <button class="btn btn-primary btn-block">Submit</button>
                    </form>
                </div>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
