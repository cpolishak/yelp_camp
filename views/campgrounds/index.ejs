<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container text-center">
            <h1 class="font-weight-bold">Welcome to the Camps page!</h1>
            <p>You can view some of our handpicked campgrounds from all around</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add A New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    <img src="<%= campground.image %>" alt="" class="img-thumbnail">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer.ejs %>